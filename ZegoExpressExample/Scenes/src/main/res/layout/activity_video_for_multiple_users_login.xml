<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scenes.VideoForMultipleUsers.VideoForMultipleUsersLogin">
    <TextView
        android:id="@+id/roomIDTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RoomID"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <EditText
        android:id="@+id/editRoomID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:layout_below="@id/roomIDTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="0004"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/userIDTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserID"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editRoomID"/>
    <EditText
        android:id="@+id/editUserID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:layout_below="@id/userIDTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="0004"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/userNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editUserID"/>
    <EditText
        android:id="@+id/editUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round"
        android:layout_below="@id/userNameTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="0004"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/encodeResolutionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/encode_resolution"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/editUserName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="20dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/encodeResolutionSpinner"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/resolution"
        android:theme="@style/Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/editUserName"/>
    <TextView
        android:id="@+id/fpsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fps"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@+id/encodeResolutionTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/encodeResolutionSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="20dp"/>
    <EditText
        android:id="@+id/editFps"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/encodeResolutionSpinner"
        android:layout_toLeftOf="@id/fps"
        android:layout_toStartOf="@id/fps"
        android:background="@drawable/edit_round"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:inputType="number"
        android:text="15"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/bitrateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bitrate"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/fpsTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/bitrateSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/bitrate"
        android:theme="@style/Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/fpsTitle"/>
    <Button
        android:id="@+id/loginRoomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_room"
        android:layout_margin="20dp"
        android:layout_below="@id/bitrateTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>