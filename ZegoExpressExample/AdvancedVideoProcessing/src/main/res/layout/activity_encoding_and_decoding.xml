<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="im.zego.encodinganddecoding.EncodingAndDecoding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <im.zego.commontools.logtools.logLinearLayout
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RoomID:0012 UserID:"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/userID"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/roomStateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Room state"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/roomState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true" />

            <TextureView
                android:id="@+id/PreviewView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@id/view"
                android:layout_toLeftOf="@id/view"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@id/view"
                android:layout_toLeftOf="@id/view"
                android:gravity="center"
                android:text="@string/preview"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextureView
                android:id="@+id/PlayView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/view"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/view" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/view"
                android:layout_toRightOf="@id/view"
                android:gravity="center"
                android:text="@string/play_stream"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <Button
                android:id="@+id/startPublishButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/view"
                android:layout_alignBottom="@id/PreviewView"
                android:text="@string/start_publishing"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/startPlayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view"
                android:layout_alignBottom="@id/PreviewView"
                android:text="@string/start_playing"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/publishIDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publish StreamID:"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/PreviewView"
                android:layout_alignLeft="@id/PreviewView"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/editPublishStreamID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_round"
                android:text="0012"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@+id/view"
                android:layout_toRightOf="@id/publishIDTitle"
                android:layout_below="@id/PreviewView"/>
            <TextView
                android:id="@+id/playIDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publish StreamID:"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/PlayView"
                android:layout_alignLeft="@id/PlayView"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/editPlayStreamID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_round"
                android:text="0012"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:layout_alignRight="@id/PlayView"
                android:layout_toRightOf="@id/playIDTitle"
                android:layout_below="@id/PreviewView"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey"
            android:layout_margin="3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hardwareEncodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hardwareencoder"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp" />

            <TextView
                android:id="@+id/hardwareDecodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hardwaredecoder"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_below="@id/hardwareEncodeTitle"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/hardwareEncodeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:minHeight="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/hardwareDecodeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minHeight="0dp"
                android:layout_below="@+id/hardwareEncodeSwitch"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"/>
            <TextView
                android:id="@+id/codecIDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="codecID"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/hardwareDecodeTitle"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"/>

            <TextView
                android:id="@+id/scalableVideoCodingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scalable_video_coding"
                android:layout_below="@id/codecIDTitle"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/codecIDSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hardwareDecodeSwitch"
                android:entries="@array/codecID"
                android:theme="@style/Spinner"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/scalableVideoCodingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/codecIDSpinner"
                android:minHeight="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"/>
            <TextView
                android:id="@+id/videoLayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scalableVideoCodingSwitch"
                android:text="@string/video_layer_for_playing"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/codecIDSpinner"
                android:text="@string/h265_reminder"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/dark_grey"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/videoLayerSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scalableVideoCodingSwitch"
                android:entries="@array/videoLayer"
                android:theme="@style/Spinner"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/publish_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoLayerTitle"
                android:text="@string/publishing_reminder"
                android:layout_margin="15dp"
                android:textColor="@color/purple_500"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/publish_reminder"
                android:text="@string/playing_reminder"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/purple_500"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>