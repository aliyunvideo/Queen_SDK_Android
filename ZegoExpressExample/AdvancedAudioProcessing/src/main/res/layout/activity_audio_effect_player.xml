<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".audioeffectplayer.AudioEffectPlayerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <im.zego.commontools.logtools.logLinearLayout
        android:id="@+id/logView"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomID:0020   StreamID:0020   UserID:"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/userIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/roomStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Room state"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/roomState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" />
        <TextureView
            android:id="@+id/PreviewView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/view"
            android:layout_toLeftOf="@id/view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/view"
            android:layout_toLeftOf="@id/view"
            android:gravity="center"
            android:text="Preview"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextureView
            android:id="@+id/PlayView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/view"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/view" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/view"
            android:layout_toRightOf="@id/view"
            android:gravity="center"
            android:text="Play Stream"
            android:textColor="@color/black"
            android:textSize="13sp" />
        <Button
            android:id="@+id/startPublishButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view"
            android:layout_alignBottom="@id/PreviewView"
            android:text="@string/start_publishing"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/startPlayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view"
            android:layout_alignBottom="@id/PreviewView"
            android:text="@string/start_playing"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/little_dark_grey"
        android:text="AudioEffect 1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/publishOutSwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publish_out"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/playCountEdit1"
            android:layout_width="100dp"
            android:background="@drawable/edit_round"
            android:textSize="15sp"
            android:padding="5dp"
            android:text="1"
            android:inputType="number"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_count"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/playCountEdit1"
            android:layout_toStartOf="@id/playCountEdit1"
            android:layout_marginVertical="20dp"/>
    </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/playButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="12sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/pauseButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Pause"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/resumeButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:textSize="12sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/stopButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textSize="12sp"
            android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/loadResourcesButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:paddingHorizontal="0dp"
                android:text="@string/load_resource"/>
            <EditText
                android:id="@+id/loadResourcesEdit1"
                android:layout_width="0dp"
                android:background="@drawable/edit_round"
                android:textSize="12sp"
                android:padding="5dp"
                android:text="effect_1_stereo.wav"
                android:enabled="false"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
            <Button
                android:id="@+id/unloadResourcesButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:paddingHorizontal="0dp"
                android:text="Unload"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/little_dark_grey"
            android:text="AudioEffect 2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/publishOutSwitch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_out"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
            <EditText
                android:id="@+id/playCountEdit2"
                android:layout_width="100dp"
                android:background="@drawable/edit_round"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="1"
                android:inputType="number"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_count"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_toLeftOf="@id/playCountEdit2"
                android:layout_toStartOf="@id/playCountEdit2"
                android:layout_marginVertical="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/playButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pauseButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/resumeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/stopButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textSize="12sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/loadResourcesButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:paddingHorizontal="0dp"
                android:text="@string/load_resource"/>
            <EditText
                android:id="@+id/loadResourcesEdit2"
                android:layout_width="0dp"
                android:background="@drawable/edit_round"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:text="effect_2_mono.wav"
                android:enabled="false"
                android:layout_weight="4"/>
            <Button
                android:id="@+id/unloadResourcesButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:paddingHorizontal="0dp"
                android:text="Unload"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/little_dark_grey"
            android:text="Controller"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/pauseAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause All"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/resumeAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume All"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/stopAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop All"
                android:textSize="12sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>