<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="im.zego.quickstart.VideoChatLogin">

    <RelativeLayout
        android:id="@+id/videoChatConfigLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/roomIDNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/room_id_notice"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/roomIDTitle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="RoomID:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/roomIDNotice"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editRoomID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/roomIDTitle"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:padding="5dp"
            android:layout_below="@id/roomIDNotice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/userIDNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_id_notice"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/editRoomID"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/userIDTitle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="UserID:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/userIDNotice"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userIDTitle"
            android:text=""
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:padding="5dp"
            android:layout_below="@id/userIDNotice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/streamIDNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stream_id_notice"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/editUserID"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/streamIDTitle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="PublishStreamID:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@+id/streamIDNotice"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editStreamID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/streamIDTitle"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:background="@drawable/edit_round"
            android:padding="5dp"
            android:layout_below="@id/streamIDNotice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/loginRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Login Room"
        android:textSize="15sp"
        android:layout_below="@+id/videoChatConfigLayout"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>