<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pk_host_pk_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_pk_layout_height"
    android:layout_below="@id/pk_host_in_top_participant_layout"
    android:layout_marginTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/pk_host_remaining_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/live_pk_remaining_time_layout_height"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_scalable_gray_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/live_pk_remaining_time_layout_height"
            android:layout_height="@dimen/live_pk_remaining_time_layout_height"
            android:src="@drawable/icon_remain_time"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/live_pk_remaining_time_text_margin"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_small"
            android:text="@string/live_pk_host_remaining_time_hint"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pk_host_remaining_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/live_pk_progress_layout_countdown_margin_end"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_small"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pk_host_video_layout_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_pk_video_layout_height"
        android:layout_below="@id/pk_host_remaining_time_layout"
        android:layout_marginTop="@dimen/live_pk_video_layout_margin_top">
        <LinearLayout
            android:id="@+id/pk_host_video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/pk_host_video_layout_left_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:id="@+id/pk_host_video_layout_right_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <FrameLayout
                    android:id="@+id/pk_host_video_layout_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pk_video_layout_other_host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/live_pk_video_layout_other_host_name_margin_start"
                    android:layout_marginBottom="@dimen/live_pk_video_layout_other_host_name_margin_bottom"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pk_video_layout_enter_other_room_btn"
                    android:layout_width="@dimen/live_pk_video_layout_enter_other_room_btn_size"
                    android:layout_height="@dimen/live_pk_video_layout_enter_other_room_btn_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/live_pk_video_layout_other_host_name_margin_bottom"
                    android:src="@drawable/icon_pk_enter_another_room"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pk_host_pk_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_pk_progress_layout_height"
        android:layout_below="@id/pk_host_remaining_time_layout"
        android:layout_marginTop="@dimen/live_pk_progress_layout_margin_top"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:padding="@dimen/live_pk_progress_layout_padding"
        android:background="@drawable/pk_progress_round_scalable_white_bg">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pk_progress_left_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:gravity="center_vertical|start"
            android:paddingStart="@dimen/live_pk_progress_text_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/pk_progress_round_scalable_blue_left_bg"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pk_progress_right_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="gravity"
            android:gravity="center_vertical|end"
            android:paddingEnd="@dimen/live_pk_progress_text_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/pk_progress_round_scalable_red_right_bg"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/live_pk_vs_icon_size"
        android:layout_height="@dimen/live_pk_vs_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_pk_vs"/>
</RelativeLayout>