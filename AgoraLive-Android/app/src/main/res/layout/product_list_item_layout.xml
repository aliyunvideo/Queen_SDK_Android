<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_room_product_action_sheet_product_item_height"
    android:padding="@dimen/live_room_product_action_sheet_product_item_bg_corner"
    android:background="@drawable/product_item_background">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_list_item_icon"
        android:layout_width="@dimen/live_room_product_action_sheet_product_item_height"
        android:layout_height="@dimen/live_room_product_action_sheet_product_item_height"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/live_room_product_action_sheet_product_item_content_padding"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_list_item_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_product_action_sheet_product_item_text_height"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/product_list_item_icon"
        android:layout_marginTop="@dimen/live_room_product_action_sheet_product_item_padding"
        android:layout_marginEnd="@dimen/live_room_product_action_sheet_product_item_content_padding"
        android:textColor="@android:color/black"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/live_room_product_action_sheet_product_item_text_height"
        android:layout_toEndOf="@id/product_list_item_icon"
        android:layout_below="@id/product_list_item_description"
        android:layout_marginTop="@dimen/live_room_product_action_sheet_product_item_bg_corner"
        android:layout_marginBottom="@dimen/live_room_product_action_sheet_product_item_padding"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:textColor="@color/red"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/product_list_item_action_btn"
        android:layout_width="@dimen/live_room_product_action_sheet_product_item_action_width"
        android:layout_height="@dimen/live_room_product_action_sheet_product_item_text_height"
        android:background="@drawable/product_item_action_background"
        android:layout_below="@id/product_list_item_description"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/live_room_product_action_sheet_product_item_bg_corner"
        android:layout_marginBottom="@dimen/live_room_product_action_sheet_product_item_padding"
        android:layout_marginEnd="@dimen/live_room_product_action_sheet_product_item_content_padding"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textColor="@color/blue_original"/>
</RelativeLayout>
