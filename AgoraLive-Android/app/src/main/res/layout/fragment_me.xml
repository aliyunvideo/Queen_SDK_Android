<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_background_height"
        android:background="@drawable/profile_background">
        <RelativeLayout
            android:id="@+id/profile_title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="@dimen/profile_portrait_background_size"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:layout_width="@dimen/profile_portrait_background_size"
                    android:layout_height="@dimen/profile_portrait_background_size"
                    android:background="@drawable/white_circle">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/user_profile_icon"
                        android:layout_width="@dimen/profile_portrait_size"
                        android:layout_height="@dimen/profile_portrait_size"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_portrait_white"/>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_profile_nickname"
                    android:layout_width="@dimen/profile_portrait_background_size"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/profile_user_nickname_margin"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_profile_icon_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/profile_item_title_avatar"
            android:textSize="@dimen/text_size_normal"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_divider_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@color/gray_lightest"/>
    <RelativeLayout
        android:id="@+id/user_profile_nickname_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/profile_item_title_nickname"
            android:textSize="@dimen/text_size_normal"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_enter"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/edit_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/profile_item_arrow"
            android:textSize="@dimen/text_size_normal"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_divider_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@color/gray_lightest"/>
    <RelativeLayout
        android:id="@+id/user_profile_about_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/about_title"
            android:textSize="@dimen/text_size_normal"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_enter"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_divider_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@color/gray_lightest"/>
</LinearLayout>