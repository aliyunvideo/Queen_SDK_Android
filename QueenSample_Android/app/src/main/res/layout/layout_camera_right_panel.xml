<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:layout_marginRight="@dimen/alivc_common_7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnSwitchCamera"
        android:src="@drawable/queen_camera_switch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/alivc_common_287"
        android:layout_width="@dimen/camera_medium_icon"
        android:layout_height="@dimen/camera_medium_icon" />

    <ImageView
        android:id="@+id/btnSwitchQueen"
        android:src="@drawable/queen_reset"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/alivc_common_237"
        android:layout_width="@dimen/camera_medium_icon"
        android:layout_height="@dimen/camera_medium_icon" />

</RelativeLayout>
