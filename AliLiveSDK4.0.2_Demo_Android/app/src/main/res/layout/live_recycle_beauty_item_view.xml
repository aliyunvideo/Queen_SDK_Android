<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beauty_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/item_background_selector"
    >
    <TextView
        android:id="@+id/beauty_item_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_text_white"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="美颜"
        android:layout_marginLeft="25dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/beauty_item_text"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
       >

        <Switch
            android:id="@+id/beauty_item_switch"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            />
        <SeekBar
            android:id="@+id/beauty_item_seekbar"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            />

        <TextView
            android:id="@+id/beauty_item_value"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/alivc_color_gry"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:text="1212"
            android:gravity="center"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>


</RelativeLayout>
