<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:text="关闭"
        android:gravity="center"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/size_tittle"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/pk_title_image"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/liveroom_line_width"
        android:layout_marginTop="@dimen/liveroom_margin_5"
        android:background="@color/wheel_text_color_2"
        android:layout_marginBottom="@dimen/liveroom_margin_15"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_apply_mic_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>