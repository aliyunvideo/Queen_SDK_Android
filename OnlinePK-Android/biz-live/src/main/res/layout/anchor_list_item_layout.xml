<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_anchor"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_anchor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0F0C0A"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintTop_toTopOf="@+id/iv_anchor"
        app:layout_constraintLeft_toRightOf="@+id/iv_anchor" />

    <TextView
        android:id="@+id/tv_audience_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:layout_marginStart="12dp"
        android:textColor="#999999"
        app:layout_constraintBottom_toBottomOf="@+id/iv_anchor"
        app:layout_constraintLeft_toRightOf="@+id/iv_anchor" />

    <TextView
        android:id="@+id/tv_start_pk"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_anchor"
        app:layout_constraintBottom_toBottomOf="@+id/iv_anchor"
        android:background="@drawable/pk_button_bg"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="14dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/biz_live_invite_anchor_pk" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0.5dp"
        android:background="#30000000" />

</androidx.constraintlayout.widget.ConstraintLayout>
