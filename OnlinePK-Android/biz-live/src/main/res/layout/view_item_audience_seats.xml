<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/view_audience_head_layout"/>

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_toLeftOf="@+id/iv_audio"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_seat_manager_video"/>

    <ImageView
        android:id="@+id/iv_audio"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_toLeftOf="@+id/tv_hangup"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_seat_manager_audio"/>

    <TextView
        android:id="@+id/tv_hangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:background="@drawable/pk_button_bg"
        android:textColor="@color/colorWhite"
        android:text="@string/biz_live_hangup"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>