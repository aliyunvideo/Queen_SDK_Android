<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/biz_live_beauty"
            android:textColor="#FF0F0C0A"
            android:textSize="@dimen/text_size_16"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reset" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#33000000" />

    <RelativeLayout
        android:id="@+id/lly_beauty_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:layout_marginTop="12dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_beauty_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="@string/biz_live_beauty_white"
            android:layout_marginEnd="@dimen/dp_20" />

        <SeekBar
            android:id="@+id/sb_beauty_white"
            android:layout_width="match_parent"
            android:layout_marginEnd="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@id/tv_beauty_white"
            android:layout_alignBottom="@id/tv_beauty_white"
            android:max="100"
            android:maxHeight="2dp"
            android:progress="50"
            android:layout_toEndOf="@id/tv_beauty_white"
            android:padding="0dp"
            android:progressDrawable="@drawable/background_process_control_seekbar_bg"
            android:saveEnabled="true"
            android:thumb="@drawable/seekbar_custom_thumb" />

        <TextView
            android:id="@+id/tv_beauty_white_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:maxLength="4"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="0.0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lly_beauty_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_beauty_skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="@string/biz_live_beauty_skin"
            android:layout_marginEnd="@dimen/dp_20" />

        <SeekBar
            android:id="@+id/sb_beauty_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:layout_toEndOf="@+id/tv_beauty_skin"
            android:layout_alignBottom="@+id/tv_beauty_skin"
            android:layout_alignTop="@+id/tv_beauty_skin"
            android:maxHeight="2dp"
            android:layout_marginEnd="48dp"
            android:progress="50"
            android:padding="0dp"
            android:progressDrawable="@drawable/background_process_control_seekbar_bg"
            android:saveEnabled="true"
            android:thumb="@drawable/seekbar_custom_thumb" />

        <TextView
            android:id="@+id/tv_beauty_skin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_14"
            android:maxLength="4"
            android:layout_alignParentEnd="true"
            android:textColor="#222222"
            android:text="0.0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lly_thin_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_thin_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="@string/biz_live_thin_face"
            android:layout_marginEnd="@dimen/dp_20" />

        <SeekBar
            android:id="@+id/sb_thin_face"
            android:layout_width="match_parent"
            android:layout_marginEnd="48dp"
            android:layout_toEndOf="@+id/tv_thin_face"
            android:layout_alignTop="@+id/tv_thin_face"
            android:layout_alignBottom="@+id/tv_thin_face"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:maxHeight="2dp"
            android:progress="50"
            android:padding="0dp"
            android:progressDrawable="@drawable/background_process_control_seekbar_bg"
            android:saveEnabled="true"
            android:thumb="@drawable/seekbar_custom_thumb" />

        <TextView
            android:id="@+id/tv_thin_face_value"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLength="4"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="0.0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lly_big_eye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginBottom="12dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_big_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="@string/biz_live_big_eye"
            android:layout_marginEnd="@dimen/dp_20" />

        <SeekBar
            android:id="@+id/sb_big_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="48dp"
            android:layout_alignBottom="@+id/tv_big_eye"
            android:layout_toEndOf="@+id/tv_big_eye"
            android:layout_alignTop="@+id/tv_big_eye"
            android:max="100"
            android:maxHeight="2dp"
            android:progress="50"
            android:padding="0dp"
            android:progressDrawable="@drawable/background_process_control_seekbar_bg"
            android:saveEnabled="true"
            android:thumb="@drawable/seekbar_custom_thumb" />

        <TextView
            android:id="@+id/tv_big_eye_value"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLength="4"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_14"
            android:textColor="#222222"
            android:text="0.0" />

    </RelativeLayout>


</LinearLayout>
