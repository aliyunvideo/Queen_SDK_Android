<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_8_bg"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_12"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_14"
        android:padding="@dimen/dp_4"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/biz_live_ignore"
        android:visibility="gone"
        android:background="@drawable/stroke_white_radius_4" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_14"
        android:padding="@dimen/dp_4"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:text="@string/biz_live_cancel"
        android:background="@drawable/pk_button_bg" />

</LinearLayout>