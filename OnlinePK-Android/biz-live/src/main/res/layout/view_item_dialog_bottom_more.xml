<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_dialog_utils_icon_circle_bg"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/iv_item_icon"
        app:layout_constraintStart_toStartOf="@id/iv_item_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_item_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>